<Window x:Class="Harkka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harkka"
        mc:Ignorable="d"
        Title="Tribal game" Height="350" Width="656.731" FontSize="12">
    <Grid Background="#FF201F1D">
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="320" Margin="237,0,0,0" VerticalAlignment="Top" Width="5" Background="#FF3A3835" IsEnabled="False"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" HeadersVisibility="None" VerticalAlignment="Top" Foreground="Red" Background="#FF201F1D" BorderBrush="#FF201F1D" RowBackground="#FF201F1D"  IsEnabled="False" FontSize="13.333" />
        <StackPanel HorizontalAlignment="Left" Height="320" Margin="242,0,0,0" VerticalAlignment="Top" Width="407">
            <TabControl x:Name="tabControl" Height="320" Background="#FF201F1D" BorderBrush="#FF201F1D">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#FFE69116" Margin="2,0">
                                        <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,2" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#FF726F68"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#FF2E2E2E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <TabItem Header="Camp" Foreground="White">
                    <Grid Background="#FF201F1D" Margin="0,0,0,0">
                        <Button x:Name="buttonHarvest" Content="Harvest" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Height="33" Click="buttonHarvest_Click"/>
                        <Button x:Name="buttonHut" Content="Hut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="135" Height="33" Click="buttonHut_Click" Margin="140,0,0,0" IsEnabled="False"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Tribe" Foreground="White">
                    <Grid Background="#FF201F1D" Margin="0,0,0,0">
                    </Grid>
                </TabItem>
                <TabItem Header="Science" Foreground="White">
                    <Grid Background="#FF201F1D" Margin="0,0,0,0">
                    </Grid>
                </TabItem>
                <TabItem Header="Religion" Foreground="White">
                    <Grid Background="#FF201F1D" Margin="0,0,0,0">
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>

    </Grid>
</Window>
